            android:minHeight="80dp"
            android:minWidth="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/btndivide" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:gravity="right" >

