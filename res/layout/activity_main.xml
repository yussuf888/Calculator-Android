<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mys.calculator.MainActivity" >

    <LinearLayout
        android:layout_width="248dp"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txtDisplay"
            android:layout_width="247dp"
            android:layout_height="46dp"
            android:layout_weight="111"
            android:gravity="left|fill_horizontal"
            android:maxLength="@integer/a"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/b" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:gravity="right" >

        <ImageButton
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btnc"
            android:minHeight="80dp"
            android:minWidth="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/btnc" />

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btnback"
            android:minHeight="80dp"
            android:minWidth="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/btnback" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right" >

        <ImageButton
            android:id="@+id/btnPlusmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btnplusminus"
            android:minHeight="80dp"
            android:minWidth="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/btnplusminus" />

        <ImageButton
            android:id="@+id/btnSqr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btnpower2"
            android:minHeight="80dp"
            android:minWidth="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/btnpower2" />

        <ImageButton
            android:id="@+id/btnSqrt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btnsquareroot"
            android:minHeight="80dp"
            android:minWidth="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/btnsquareroot" />

        <ImageButton
            android:id="@+id/btnPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btnpercentage"
            android:minHeight="80dp"
            android:minWidth="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/btnpercentage" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:gravity="right" >

        <ImageButton
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn7"
            android:minHeight="80dp"
            android:minWidth="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/btn7" />

        <ImageButton
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn8"
            android:minHeight="80dp"
            android:minWidth="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/btn8" />

        <ImageButton
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn9"
            android:minHeight="80dp"
            android:minWidth="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/btn9" />

        <ImageButton
            android:id="@+id/btnDiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
