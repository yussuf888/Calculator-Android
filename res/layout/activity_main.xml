            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn1"
            android:minHeight="80dp"
            android:minWidth="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/btn1" />

        <ImageButton
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
